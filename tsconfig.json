{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node10",
    "types": ["node"]
  },
  "include": ["pizxel/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "matrixos-archive", "data"]
}
